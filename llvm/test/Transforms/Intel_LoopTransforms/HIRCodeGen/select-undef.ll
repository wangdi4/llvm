; RUN: opt %s -passes="hir-ssa-deconstruction,print<hir>,hir-cg" -force-hir-cg -S 2>&1 | FileCheck %s

; Verify that undef operand in select predicate is code generated correctly.

; CHECK: + DO i1 = 0, 4, 1   <DO_LOOP>
; CHECK: |   %sel = (undef != 0) ? i1 : 1;
; CHECK: |   (%A)[0][i1] = %sel;
; CHECK: + END LOOP


; Loop header bblock generated by CG.
; CHECK: loop.{{[0-9]+}}:

; Verify that select condition is generated as undef.
; CHECK: {{%.*}} = select i1 undef,


; ModuleID = 'select-undef.ll'
target datalayout = "e-m:e-i64:64-f80:128-n8:16:32:64-S128"
target triple = "x86_64-unknown-linux-gnu"

define i32 @main() {
entry:
  %A = alloca [5 x i32], align 16
  br label %for.body

for.body:                                         ; preds = %entry, %for.inc
  %i.01 = phi i32 [ 0, %entry ], [ %inc, %for.inc ]
  %idxprom = sext i32 %i.01 to i64
  %arrayidx = getelementptr inbounds [5 x i32], ptr %A, i32 0, i64 %idxprom
  %sel = select i1 undef, i32 %i.01, i32 1
  store i32 %sel, ptr %arrayidx, align 4
  br label %for.inc

for.inc:                                          ; preds = %for.body
  %inc = add nsw i32 %i.01, 1
  %cmp = icmp slt i32 %inc, 5
  br i1 %cmp, label %for.body, label %for.end

for.end:                                          ; preds = %for.inc
  %arrayidx1 = getelementptr inbounds [5 x i32], ptr %A, i32 0, i64 0
  %0 = load i32, ptr %arrayidx1, align 4
  ret i32 %0
}
