entry:
  %lane = call i64 @llvm.vplan.laneid()
  %uniform_top_test = icmp eq i64 %N, 0
  br i1 %uniform_top_test, label %exit, label %preheader

preheader:
  br label %header

header:
  %iv = phi i64 [ %iv.next, %header ], [ 0, %preheader ]
  %arrayidx = getelementptr inbounds i64, i64* %a, i64 %iv
  %iv.next = add nuw nsw i64 %iv, 1
  %exitcond = icmp eq i64 %iv.next, %lane
  br i1 %exitcond, label %loop.exit, label %header

loop.exit:
  br label %exit

exit:
  ret void
}

