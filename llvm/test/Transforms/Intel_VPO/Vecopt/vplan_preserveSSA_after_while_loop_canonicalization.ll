; NOTE: Assertions have been autogenerated by utils/intel_update_vplan_checks.py
; Test if we preserve SSA after single exit while loop canonicalization. Some
; values are defined in the loop body, but they are used in the loop header. To
; preserve dominance for these values, a phi node is emitted at the top of the
; new loop latch.

; RUN: opt < %s -vplan-func-vec -disable-output -print-after-vplan-func-vec-loop-exit-canon | FileCheck %s
; RUN: opt < %s -passes="vplan-func-vec" -disable-output -print-after-vplan-func-vec-loop-exit-canon | FileCheck %s

target datalayout = "e-m:e-i64:64-f80:128-n8:16:32:64-S128"
target triple = "x86_64-unknown-linux-gnu"

; Function Attrs: norecurse nounwind uwtable
define void @main() {
; CHECK-LABEL:  VPlan IR for: main
; CHECK-NEXT:    [[BB0:BB[0-9]+]]: # preds:
; CHECK-NEXT:     i32 [[VP_LANE:%.*]] = induction-init{add} i32 0 i32 1
; CHECK-NEXT:     br [[BB1:BB[0-9]+]]
; CHECK-EMPTY:
; CHECK-NEXT:    [[BB1]]: # preds: [[BB0]], [[NEW_LOOP_LATCH0:new.loop.latch[0-9]+]]
; CHECK-NEXT:     i32 [[VP_IV:%.*]] = phi  [ i32 0, [[BB0]] ],  [ i32 [[VP_IV_NEXT_SSA_PHI:%.*]], [[NEW_LOOP_LATCH0]] ]
; CHECK-NEXT:     i32 [[VP_INC:%.*]] = add i32 [[VP_IV]] i32 1
; CHECK-NEXT:     i1 [[VP_CMP1:%.*]] = icmp eq i32 [[VP_INC]] i32 16
; CHECK-NEXT:     br i1 [[VP_CMP1]], [[BB2:BB[0-9]+]], [[NEW_LOOP_LATCH0]]
; CHECK-EMPTY:
; CHECK-NEXT:      [[BB2]]: # preds: [[BB1]]
; CHECK-NEXT:       i32 [[VP_IV_NEXT:%.*]] = add i32 [[VP_IV]] i32 1
; CHECK-NEXT:       br [[NEW_LOOP_LATCH0]]
; CHECK-EMPTY:
; CHECK-NEXT:    [[NEW_LOOP_LATCH0]]: # preds: [[BB2]], [[BB1]]
; CHECK-NEXT:     i32 [[VP_IV_NEXT_SSA_PHI]] = phi  [ i32 [[VP_IV_NEXT]], [[BB2]] ],  [ i32 undef, [[BB1]] ]
; CHECK-NEXT:     i1 [[VP_TAKEBACKEDGECOND:%.*]] = phi  [ i1 true, [[BB2]] ],  [ i1 false, [[BB1]] ]
; CHECK-NEXT:     br i1 [[VP_TAKEBACKEDGECOND]], [[BB1]], [[BB3:BB[0-9]+]]
; CHECK-EMPTY:
; CHECK-NEXT:    [[BB3]]: # preds: [[NEW_LOOP_LATCH0]]
; CHECK-NEXT:     i32 [[VP_LIVE_OUT:%.*]] = phi  [ i32 0, [[NEW_LOOP_LATCH0]] ]
; CHECK-NEXT:     br [[BB4:BB[0-9]+]]
; CHECK-EMPTY:
; CHECK-NEXT:    [[BB4]]: # preds: [[BB3]]
; CHECK-NEXT:     ret
; CHECK-NEXT:     br <External Block>
;
entry:
  %lane = call i32 @llvm.vplan.laneid()
  br label %header

header:
  %iv = phi i32 [ 0, %entry ], [ %iv.next, %latch ]
  %inc = add nsw i32 %iv, 1
  %cmp1 = icmp eq i32 %inc, 16
  br i1 %cmp1, label %latch, label %exit_bb1

latch:
  %iv.next = add nsw i32 %iv, 1
  br label %header

exit_bb1:
  %live.out = phi i32 [ 0, %header]
  br label %end

end:
  ret void
}

declare i32 @llvm.vplan.laneid()
