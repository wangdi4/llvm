  %arrayidx = getelementptr inbounds i32, i32* %ub, i64 %lane
  %arrayidx2 = getelementptr inbounds i32, i32* %a, i64 %lane
  %.pre = load i32, i32* %arrayidx, align 4
  %lane.trunc = trunc i64 %lane to i32
  br label %header

header:
