; Check no assertion is raised if UnifyFunctionExitNodes pass changes the
; function with multiple return blocks.
; ----------------------------------------------------
; The test IR is generated by the IR below, with command : opt -passes=mergereturn
; ----------------------------------------------------
; target datalayout = "e-m:e-p270:32:32-p271:32:32-p272:64:64-i64:64-f80:128-n8:16:32:64-S128"
; target triple = "x86_64-pc-linux"
; Function Attrs: nofree norecurse nosync nounwind readnone
; define dso_local void @test(i32 addrspace(3)* %arg) local_unnamed_addr #0 !kernel_arg_addr_space !1 !kernel_arg_access_qual !1 !kernel_arg_type !1 !kernel_arg_base_type !1 !kernel_arg_type_qual !1 !kernel_arg_name !1 !kernel_arg_host_accessible !1 !kernel_arg_pipe_depth !1 !kernel_arg_pipe_io !1 !kernel_arg_buffer_location !1 !no_barrier_path !2 !autorun !3 !max_global_work_dim !4 {
; entry:
;   br label %for.cond
; for.cond:
;   %load = load i32, i32 addrspace(3)* %arg, align 8
;   %cmp = icmp sge i32 %load, 0
;   br i1 %cmp, label %if.then, label %if.end
; if.then:
;   %cmp.2 = icmp sle i32 %load, 1
;   br i1 %cmp.2, label %if.then.2, label %if.end.2
; if.then.2:
;   br label %for.cond
; if.end:
;   ret void
; if.end.2:
;   ret void
; }
; attributes #0 = { nofree norecurse nosync nounwind readnone }
; !sycl.kernels = !{!0}
; !0 = !{void (i32 addrspace(3)*)* @test}
; !1 = !{}
; !2 = !{i1 true}
; !3 = !{i32 0}
; ----------------------------------------------------
; RUN: opt -passes=sycl-kernel-infinite-loop-creator %s -S -enable-debugify -disable-output 2>&1 | FileCheck -check-prefix=DEBUGIFY %s
; RUN: opt -passes=sycl-kernel-infinite-loop-creator %s -S | FileCheck %s

target datalayout = "e-m:e-p270:32:32-p271:32:32-p272:64:64-i64:64-f80:128-n8:16:32:64-S128"
target triple = "x86_64-pc-linux"

; CHECK: if.end:
; CHECK-NEXT: br label %UnifiedReturnBlock
; CHECK: if.end.2:
; CHECK-NEXT: br label %UnifiedReturnBlock
; CHECK: UnifiedReturnBlock:
; CHECK-NEXT: br label %infinite_loop_entry
; CHECK-NOT: ret void

; Function Attrs: nofree norecurse nosync nounwind readnone
define dso_local void @test(ptr addrspace(3) %arg) local_unnamed_addr #0 !kernel_arg_addr_space !1 !kernel_arg_access_qual !1 !kernel_arg_type !1 !kernel_arg_base_type !1 !kernel_arg_type_qual !1 !kernel_arg_name !1 !kernel_arg_host_accessible !1 !kernel_arg_pipe_depth !1 !kernel_arg_pipe_io !1 !kernel_arg_buffer_location !1 !no_barrier_path !2 !autorun !2 !max_global_work_dim !3 !arg_type_null_val !4 {
entry:
  br label %for.cond

for.cond:                                         ; preds = %if.then.2, %entry
  %load = load i32, ptr addrspace(3) %arg, align 8
  %cmp = icmp sge i32 %load, 0
  br i1 %cmp, label %if.then, label %if.end

if.then:                                          ; preds = %for.cond
  %cmp.2 = icmp sle i32 %load, 1
  br i1 %cmp.2, label %if.then.2, label %if.end.2

if.then.2:                                        ; preds = %if.then
  br label %for.cond

if.end:                                           ; preds = %for.cond
  br label %UnifiedReturnBlock

if.end.2:                                         ; preds = %if.then
  br label %UnifiedReturnBlock

UnifiedReturnBlock:                               ; preds = %if.end.2, %if.end
  ret void
}

attributes #0 = { nofree norecurse nosync nounwind readnone }

!sycl.kernels = !{!0}

!0 = !{ptr @test}
!1 = !{!"int*"}
!2 = !{i1 true}
!3 = !{i32 0}
!4 = !{ptr addrspace(3) null}


