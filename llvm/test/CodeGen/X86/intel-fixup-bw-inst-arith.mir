    MOV16mr killed renamable $rsi, 1, $noreg, 0, $noreg, renamable $dx, implicit killed $edx :: (store 2 into %ir.y)
    MOV16mr killed renamable $rdi, 1, $noreg, 0, $noreg, killed renamable $ax :: (store 2 into %ir.x)
    RETQ

