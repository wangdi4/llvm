body:             |
  bb.0 (%ir-block.0):
    liveins: $edx, $rdi, $rsi

    ; CHECK-LABEL: name: add
    ; CHECK: liveins: $edx, $rdi, $rsi
    ; CHECK: $eax = MOVZX32rm16 renamable $rdi, 1, $noreg, 0, $noreg :: (load 2 from %ir.x)
    ; CHECK: $eax = ADD32ri undef $eax, 2, implicit-def $eflags, implicit $ax, implicit-def dead $eflags
    ; CHECK: MOV16mr killed renamable $rsi, 1, $noreg, 0, $noreg, renamable $dx, implicit killed $edx :: (store 2 into %ir.y)
    ; CHECK: MOV16mr killed renamable $rdi, 1, $noreg, 0, $noreg, killed renamable $ax :: (store 2 into %ir.x)
    ; CHECK: RETQ
    renamable $ax = MOV16rm renamable $rdi, 1, $noreg, 0, $noreg :: (load 2 from %ir.x)
