@LIT_SITE_CFG_IN_HEADER@

import sys
import lit.util

config.opencl_binary_dir = "@OCL_OUTPUT_BINARY_DIR@"
config.opencl_library_dir = "@OCL_OUTPUT_LIBRARY_DIR@"
config.opencl_include_dir = "@OCL_INCLUDE_DIR@"
config.opencl_tests_binary_dir = "@OCL_TESTS_BINARY_DIR@"
config.operating_system = "@CMAKE_SYSTEM_NAME@"
config.intree_build = "@OPENCL_INTREE_BUILD@"
config.llvm_tools_dir = "@LLVM_TOOLS_DIR@"
config.llvm_libs_dir = "@LLVM_LIBS_DIR@"
config.host_arch = "@HOST_ARCH@"

if 4 == @CMAKE_SIZEOF_VOID_P@:
    config.available_features.add("32bit")
else:
    config.available_features.add("64bit")

# Support substitution of the tools and libs dirs with user parameters. This is
# used when we can't determine the tool dir at configuration time.
try:
    config.llvm_tools_dir = config.llvm_tools_dir % lit_config.params
    config.llvm_libs_dir = config.llvm_libs_dir % lit_config.params
except KeyError as e:
    key, = e.args
    lit_config.fatal("unable to find %r parameter, use '--param=%s=VALUE'" % (key,key))

import lit.llvm
lit.llvm.initialize(lit_config, config)

# Let the main config do the real work.
lit_config.load_config(config, "@BACKEND_ROOT_DIR@/tests/lit.cfg")
