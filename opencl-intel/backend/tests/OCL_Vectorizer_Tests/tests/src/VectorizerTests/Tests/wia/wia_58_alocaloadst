/*
 * Part of the control flow tests that check vectorization of control flow statements.
 *

 * @param in
 * 		The input array.
 * @param out
 * 		The output array.
 *
 */
__kernel void
wia_58_alocaloadst
( __global  float *in,
	__global float8 *out)
{


		int gid=get_global_id(0);
		float  num=get_global_id(0);			//alloca random
		float x=314;							//alloca random
		float* point=&num;
		int i;
		
		for (i=1;i<100;i++)
		{
		
			if (x>num) {       //load unif x load unif num
			
				*point+=1+x;
			}
			else 
			{
				point=&x;   //load random.x
				out[gid]=out[gid]-(*point+i);
			}
			
		}
	
	
	out[gid] =out[gid] + *point;

}