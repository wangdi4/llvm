/*
 * Part of the tests that check different LLVM instructions on different argument
 * types and different argument sources.
 *
 * Tests the LLVM upsample function when it recieves as input uchar4 produced by
 * previous instruction and called twice.
 * This instruction is vectorizable.
 *
 * @param in
 * 		The input array.
 * @param out
 * 		The output array.
 *
 */
__kernel void
func_upsample (	__global const float *in,
		__global float4 *out)
{
	int gid = get_global_id(0);
	float tmp = ilogb(in[gid]);
	uchar4 tmp1 = as_uchar4(tmp);
	uchar4 tmp2 = as_uchar4(ldexp(in[gid], gid));
	ushort4 res1 = upsample(tmp1, tmp2);
	ushort4 res2 = upsample(tmp1, tmp2);
	ushort8 res;
	res.s0 = res1.x;
	res.s1 = res1.y;
	res.s2 = res1.z;
	res.s3 = res1.w;
	res.s4 = res2.x;
	res.s5 = res2.y;
	res.s6 = res2.z;
	res.s7 = res2.w;
	out[gid] = as_float4(res);
}
