/*
 * Part of the tests that check different LLVM instructions on different argument
 * types and different argument sources.
 *
 * Tests the LLVM insertelement instruction when it recieves as input cha16 arguments
 * produced by previous instructions.
 * This instruction is NOT vectorizable.
 *
 * @param in
 * 		The input array.
 * @param out
 * 		The output array.
 *
 */
__kernel void
insertelement_char16 ( __global const float *in,
		__global float4 *out)
{
	int gid = get_global_id(0);
	char x = cos((float)gid + in[gid]);
	char y = x + fdim(in[gid], x);
	char z = convert_char((float)normalize((float)x));
	char w = isless(x, in[gid] + z);
	char4 vec = as_char4(in[gid]);
	char16 tmp = (char16)(x, y, z, w , vec.x, vec.y, vec.z, vec.w, x * vec.y, y + vec.z - vec.w, x * y * w * z, y, w - 1, vec.x - vec.y + vec.z, vec.x, vec.x + x);
	out[gid] = as_float4(tmp);
}
