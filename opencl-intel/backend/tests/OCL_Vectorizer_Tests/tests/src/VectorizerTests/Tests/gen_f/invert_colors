/*
 * Part of the general tests that check different kernels.
 *
 * Tests when input and outpu are vector and have several operations on each
 * input.
 *
 * @param in
 * 		The input array.
 * @param out
 * 		The output array.
 *
 */
__kernel void
invert_colors (	__global const float4 *in,
		__global float4 *out)
{
	int gid = get_global_id(0);
	out[gid].x = 1 - in[gid].x;
	out[gid].y = 1 - in[gid].y;
	out[gid].z = 1 - in[gid].z;
	out[gid].w = in[gid].w;
}

