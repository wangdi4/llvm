
 int test1( int k,int gid);
 int test2( int k,int gid);
 int test3( int k,int gid);

__kernel void wia_08_call_unif( __global const int *in,
		__global float2 *out)
{
	int gid = get_global_id(0);
	double2 sum=(0,0);
	int i,j;
		for (i=1;i<1000;i++)
		{
			if (gid==0)
			{
				sum.x=sum.x+=test1(i,i+1);  //call with uniform parameters  depend on id
			}
			else if (gid==1)
			{
			    out[gid].y=sum.x+sum.y+gid+test3(i*10,2);  //call with uniform parameters
			}
			{
				sum.y=sum.y+test2(2,4); //call with uniform parameters
			}
		}
	
	out[gid].x=sum.x+sum.y;
	
}


 int test1( int k,int gid)  //for uniform return uniform
{
	return test2(k,gid);
	
}

 int test2( int k, int gid)   //for uniform return uniform
{
	return gid+2;
	
}

 int test3( int k,int gid)
{
	return test2(k,gid);
	
}


