/*
 * Part of the control flow tests that check vectorization of control flow statements.
 *
 * Tests the goto statement inseide the if statement when the if condition
 * depends on long and only the if statement depends on thread id.
 *
 * @param in
 * 		The input array.
 * @param out
 * 		The output array.
 *
 */
__kernel void
if_goto (	__global const float *in,
		__global float *out,  const long2 long2Arg1)
{
	int gid = get_global_id(0);

	float tmp1 = in[gid];
	out[gid] = 0;

	if (long2Arg1.x > (long2Arg1.y + (long)gid)) {

		tmp1 -= log1p(536.4256304234);
		out[gid] = tmp1;

		goto label1;
	}

	tmp1 += 3.56856;

	label1:
	tmp1 = tanpi(out[gid]);
	out[gid] = in [gid] - tmp1 + out[gid];
}
