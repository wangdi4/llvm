/*
 * Part of the control flow tests that check vectorization of control flow statements.
 *
 * use both local and global pointers
 * @param in
 * 		The input array.
 * @param out
 * 		The output array.
 *
 */



__kernel void
atomic_func09
( volatile __global unsigned int *in,
		__global float *out)
{
	int gid = get_global_id(0);
	int rez=atomic_add(&in[gid],gid)+atomic_add(&in[gid+33],gid);
	
	
	out[gid] = rez+in[gid];
}
