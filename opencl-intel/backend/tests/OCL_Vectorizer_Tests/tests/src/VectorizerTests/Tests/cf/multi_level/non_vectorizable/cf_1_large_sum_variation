__kernel void
cf_1_large_sum_variation ( __global  double *in,
		__global float *out)
{
	int gid = get_global_id(0);
	float sum = 0;
	long sum_in = 0;
	float f_sum=1;
	

	for (int i1 = 1; i1 < 10000000; i1++) {	
		if (gid%1==0 || gid%3==2) {
			sum=sum+ ( float)1/i1+in[gid];
		}
		else {
			sum=sum+ (float) (1/(10000000-i1))-in[gid]+in[gid+1];
		}	
								

	}	
	out[gid]=sum;
}	
