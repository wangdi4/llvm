__kernel void infinite_loop3( __global const float *in,
		__global float2 *out)
{
	int gid = get_global_id(0);
	double2 sum=(0,0);
	int i,j;
	
	for (i=1;i<1000000;) 
	{
		if (gid==0)
		{
			i=i+1;
		}
		else if (gid==1)
		{
			i=i+gid*7;
		}
		else if (gid==2)
		{
			i=i*2;
		}
		else
		{
			i=i-10;
			out[gid].x=i+sum.x+out[gid].x+out[gid].y;
		}
		j=j++;
		out[gid].y=out[gid].y+i;
	}	
		
	
	
	
}