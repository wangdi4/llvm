__kernel void infinite_loop8( __global const float *in,
		__global int2 *out)
{
	int gid = get_global_id(0);
	int i=0+gid/10000;
	int j=0;	
	long3 sum=(0,0,0);
	
	if (i>10) 
	{
		for (;;)
		{
			if (i>3)
			{
				i=1+i;
				out[gid].x=gid+i;
			}
			else
			{
				while (1==1)
				{
					if ( (j+gid)>12)
					{
						for (int k=1;k<1000;k++)
						{
							k=k+2;
							i=i+3;
						}
					}	
					else if	(gid>100)
					{
						for (i=1;i<100;i=i)
						{
							printf("\n@@@@@@@@@@@@@@@@@@@@\n");
						}
					}
				}	
			}	
				
			sum.x=i+gid;
		}
	}
	else
	{
		for (i=1;i<100;i++)
		{
			sum.x=i;
			sum.y=gid+sum.z;
		}
	}
	out[gid].x = i* gid + j;
	out[gid].y = j* gid + i;	
}