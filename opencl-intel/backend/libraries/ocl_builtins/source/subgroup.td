  def sub_group_broadcast : OclBuiltin<"sub_group_broadcast", (outs gentype:$ret), (ins gentype:$x, v1u32:$sub_group_local_id), sub_group_extended_all_types>;

  foreach vf = [4, 8, 16, 32, 64] in {
