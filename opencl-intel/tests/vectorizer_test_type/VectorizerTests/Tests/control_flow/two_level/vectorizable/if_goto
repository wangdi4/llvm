/*
 * Part of the control flow tests that check vectorization of control flow statements.
 *
 * Tests the goto statement inside the if staement when if condition
 * depends on ulong and doesn't depend on thread id.
 *
 * @param in
 *     The input array.
 * @param out
 *     The output array.
 *
 */
__kernel void
if_goto (  __global const float *in,
    __global float *out)
{
  int gid = get_global_id(0);

  ulong tmp1 = in[1];
  out[gid] = 0;
//  tmp1 = mad_hi(tmp1, ULONG1, ULONG2);

  if(tmp1 > ULONG2) {
    out[gid] = ULONG2;
//    goto label1;
  }

  out[gid] = ULONG1;

  label1:
  out[gid] += ULONG2;

}
