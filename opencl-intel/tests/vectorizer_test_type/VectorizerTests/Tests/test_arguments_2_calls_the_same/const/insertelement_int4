/*
 * Part of the tests that check different LLVM instructions on different argument
 * types and different argument sources.
 *
 * Tests the LLVM insertelement instruction when it recieves int16 constant
 * and called trwice.
 * This instruction is NOT vectorizable.
 *
 * @param in
 *     The input array.
 * @param out
 *     The output array.
 *
 */
__kernel void
insertelement_int4 ( __global const float *in,
    __global float8 *out)
{
  int gid = get_global_id(0);
  int4 vec = INT4_VEC1;
  // these assignment and add are done to make sure that insertelement will be used (on vec)
  vec.x = ARG0;
  int4 resVec1 = vec;
  vec.x = ARG0;
  int4 resVec2 = vec;
  vec = vec + vec;
  vec = vec * vec;
  out[gid].s0 = resVec1.x + vec.x;
  out[gid].s1 = resVec1.y + vec.y;
  out[gid].s2 = resVec1.z + vec.z;
  out[gid].s3 = resVec1.w + vec.w;
  out[gid].s4 = resVec2.x + vec.x;
  out[gid].s5 = resVec2.y + vec.y;
  out[gid].s6 = resVec2.z + vec.z;
  out[gid].s7 = resVec2.w + vec.w;

}
