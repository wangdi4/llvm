// Tests bitcast instruction via WIA.
// The 'bitcast' instruction converts value to type ty2 without changing any bits.






__kernel void wia_26_bitcast(__global int *in,__global float8 *out,const ptrdiff_t intPtrArg1)
{
	int gid = get_global_id(0);
	double4 double4Arg1=(double4) (gid,gid,gid,gid); //conseq
	ushort16 tmp = as_ushort16(double4Arg1); //conseq
	
	int i;
	for (i=1;i<256;i++)  
	{
		double4Arg1+=1; //unif
		tmp = as_ushort16(double4Arg1); //cons
		tmp=tmp+tmp+tmp;
		out[gid].s0+=(float)tmp.s0;	
	}
	
	tmp = tmp + tmp;
	out[gid] = as_float8(tmp);

}