__kernel void
cf1_float_large_sum ( __global  double *in,
		__global float *out)
{
	int gid = get_global_id(0);
	float sum = 0;
	long sum_in = 0;
	float f_sum=1;
	

	for (int i1 = 1; i1 < 100000000; i1++) {	
		if (gid%1==0 || gid%3==2) {
			sum=sum+ ( float)1/i1;
		}
		else {
			sum=sum+ (float) (1/(100000000-i1));
		}	
								

	}
	//printf("\n @@@@ gid=%d out[gid]=%f out[gid+1]=%d sum=%ld sum_in=%ld f_sum=%lf@@@\n",gid,out[gid],out[gid+1],sum,sum_in,f_sum);
	out[gid]=sum;
}	
