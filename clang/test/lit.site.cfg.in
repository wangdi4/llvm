@LIT_SITE_CFG_IN_HEADER@

import sys

config.llvm_src_root = "@LLVM_SOURCE_DIR@"
config.llvm_obj_root = "@LLVM_BINARY_DIR@"
config.llvm_tools_dir = "@LLVM_TOOLS_DIR@"
config.llvm_libs_dir = "@LLVM_LIBS_DIR@"
config.llvm_shlib_dir = "@SHLIBDIR@"
config.llvm_plugin_ext = "@LLVM_PLUGIN_EXT@"
config.lit_tools_dir = "@LLVM_LIT_TOOLS_DIR@"
config.clang_obj_root = "@CLANG_BINARY_DIR@"
config.clang_src_dir = "@CLANG_SOURCE_DIR@"
config.clang_tools_dir = "@CLANG_TOOLS_DIR@"
config.host_triple = "@LLVM_HOST_TRIPLE@"
config.target_triple = "@TARGET_TRIPLE@"
config.llvm_use_sanitizer = "@LLVM_USE_SANITIZER@"
config.have_zlib = @HAVE_LIBZ@
config.clang_arcmt = @CLANG_ENABLE_ARCMT@
config.clang_default_cxx_stdlib = "@CLANG_DEFAULT_CXX_STDLIB@"
config.clang_staticanalyzer = @CLANG_ENABLE_STATIC_ANALYZER@
config.clang_staticanalyzer_z3 = "@CLANG_ANALYZER_WITH_Z3@"
config.clang_examples = @CLANG_BUILD_EXAMPLES@
config.enable_shared = @ENABLE_SHARED@
config.enable_backtrace = @ENABLE_BACKTRACES@
config.host_arch = "@HOST_ARCH@"

if ("@INTEL_SPECIFIC_IL0_BACKEND@" == "1"):
  config.available_features.add('il0-backend')
elif ("@INTEL_SPECIFIC_IL0_BACKEND@" == "0" or "@INTEL_SPECIFIC_IL0_BACKEND@" == ""):
  config.available_features.add('llvm-backend')
else:
  lit_config.fatal("invalid value of INTEL_SPECIFIC_IL0_BACKEND='@INTEL_SPECIFIC_IL0_BACKEND@'")

if ("@INTEL_SPECIFIC_CILKPLUS@" == "1"):
  config.available_features.add('cilkplus')
elif ("@INTEL_SPECIFIC_CILKPLUS@" != "" and "@INTEL_SPECIFIC_CILKPLUS@" != "0"):
  lit_config.fatal("invalid value of INTEL_SPECIFIC_CILKPLUS=@INTEL_SPECIFIC_CILKPLUS@")
if ("@INTEL_SPECIFIC_OPENMP@" == "1"):
  config.available_features.add('openmp')
elif ("@INTEL_SPECIFIC_OPENMP@" != "" and "@INTEL_SPECIFIC_OPENMP@" != "0"):
  lit_config.fatal("invalid value of INTEL_SPECIFIC_OPENMP=@INTEL_SPECIFIC_OPENMP@")

# Support substitution of the tools and libs dirs with user parameters. This is
# used when we can't determine the tool dir at configuration time.
try:
    config.clang_tools_dir = config.clang_tools_dir % lit_config.params
    config.llvm_tools_dir = config.llvm_tools_dir % lit_config.params
    config.llvm_shlib_dir = config.llvm_shlib_dir % lit_config.params
    config.llvm_libs_dir = config.llvm_libs_dir % lit_config.params
except KeyError:
    e = sys.exc_info()[1]
    key, = e.args
    lit_config.fatal("unable to find %r parameter, use '--param=%s=VALUE'" % (key,key))

# Let the main config do the real work.
lit_config.load_config(config, "@CLANG_SOURCE_DIR@/test/lit.cfg")
